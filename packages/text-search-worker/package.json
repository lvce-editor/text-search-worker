{
  "name": "@lvce-editor/text-search-worker",
  "version": "0.0.0-dev",
  "description": "Text Search Worker",
  "keywords": [
    "text-search"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/text-search-worker.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/textSearchWorkerMain.ts",
  "scripts": {
    "dev": "cd ../../ && npm run dev",
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 85
      }
    }
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@lvce-editor/assert": "^1.4.0",
    "@lvce-editor/i18n": "^1.1.0",
    "@lvce-editor/list": "^1.1.0",
    "@lvce-editor/rpc": "^4.7.0",
    "@lvce-editor/rpc-registry": "^2.47.0",
    "@lvce-editor/verror": "^1.7.0",
    "@lvce-editor/viewlet-registry": "^1.2.0",
    "@lvce-editor/virtual-dom-worker": "^2.3.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0"
  }
}
